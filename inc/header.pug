                    span.text История заказов

            .logo
                a(href="#")
                    img(src="img/logo.png")

            .currency
                -var currency=['','BYN','RUB','USD','EUR'];
                -var currency2=['','Беллорусский рубль','Российский рубль','Доллар США','Евро'];
                span Валюта:
                ul.currency_list
                    li
                        button.dropdown_toggle.currency_current
                            picture
                                img(src="img/currency/1.png")
                            span.text BYN
                        ul.dropdown_menu
                            -for(var c=1;c<=4;c++)
                                li.currency_item

                                    input(type="radio" name="currency" id="currency_"+c+"")
                                    label(for="currency_"+c+"")
                                        picture
                                            img(src="img/currency/"+c+".png")
                                        .text=currency[c]
                                            span=currency2[c]


        .h_bottom_row
            .main_menu
                .mm_close
                ul.nav
                    for mm_item, index in main_menu
                        li
                            a(href="#")=mm_item

            .m_right
                .account
                    ul.account_menu
                        li
                            button.dropdown_toggle
                                .icon
                                    img(src="img/user.svg")
                            ul.dropdown_menu
                                li
                                    a(href="#") Регистрация
                                li
                                    a(href="#") Вход
                .cart
                    .icon
                        img(src="img/cart.svg")
                        span.count 2

